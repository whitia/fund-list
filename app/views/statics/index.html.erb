<div class="jumbotron rounded-0">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-9 text-center">
        <h1>Organizing investments.</h1>
        <div class="small mb-2">for SBI SECURITIES Co.,Ltd.</div>
        <% if logged_in? %>
          <%= link_to 'Let''s begin to organizing investments!', user_funds_path(current_user.id), class: 'font-weight-light' %>
        <% else %>
          <button type="button" class="btn btn-outline-light rounded-pill px-5 font-weight-light"
                                data-toggle="modal" data-target="#signup">
            Sign up for free!
          </button>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="signup" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-sma modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <h2 class="my-3">Sign up</h2>

        <%= form_with model: @user, local: true do |form| %>
          <%= render 'shared/error_messages' %>
          <div class="form-group">
            <%= form.email_field :email, class: 'form-control', :placeholder => 'Email' %>
          </div>
          <div class="form-group">
            <%= form.password_field :password, class: 'form-control', :placeholder => 'Password' %>
          </div>
          <div class="form-group">
            <%= form.password_field :password_confirmation, class: 'form-control', :placeholder => 'Confirmation' %>
          </div>
          <%= form.submit 'Sign up!', class: 'btn btn-outline-light rounded-pill float-right px-3 font-weight-light' %>
        <% end %>

      </div>
    </div>
  </div>
</div>