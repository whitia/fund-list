<nav class="navbar navbar-expand-lg navbar-dark sticky-top">
  <div class="container">
    <%= link_to root_path, class:'navbar-brand' do %>
      <%= image_tag 'napstablook.png', :size => '48x48' %>
      <span class="align-bottom">Napstablook</span>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <% if logged_in? %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle font-weight-light" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= User.find(current_user.id).name %>
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to 'Organization', user_funds_path(current_user.id), class: 'dropdown-item' %>
              <%= link_to 'Help', root_path, class: 'dropdown-item' %>
              <div class="dropdown-divider"></div>
              <%= link_to 'Sign out', signout_path, method: :delete, class: 'dropdown-item' %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <button type="button" class="btn btn-link nav-link font-weight-light" data-toggle="modal" data-target="#signin">
              Sign in
            </button>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<div class="modal fade" id="signin" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-sma modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <h2 class="my-3">Sign in</h2>

        <%= form_with url: signin_path, local: true do |form| %>
          <div class="form-group">
            <%= form.email_field :email, class: 'form-control', :placeholder => 'Email' %>
          </div>
          <div class="form-group">
            <%= form.password_field :password, class: 'form-control', :placeholder => 'Password' %>
          </div>
          <%= form.submit 'Sign in', class: 'btn btn-outline-light rounded-pill float-right px-3 font-weight-light' %>
        <% end %>

      </div>
    </div>
  </div>
</div>