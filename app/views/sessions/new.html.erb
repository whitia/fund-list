<% provide :title, 'ログイン' %>
<div class="container">
  <div class="row">
    <div class="col-12 col-sm-4 offset-sm-4 py-5">
      <h3 class="font-weight-light pb-3">ログイン</h3>
      <%= form_with url: sessions_path, local: true do |form| %>
        <div class="form-group">
          <%= form.label :email, 'メールアドレス' %>
          <%= form.email_field :email, class: 'form-control', placeholder: 'user@example.com' %>
        </div>
        <div class="form-group">
          <%= form.label :password, 'パスワード' %>
          <%= form.password_field :password, class: 'form-control', placeholder: '********' %>
        </div>
        <%= form.submit 'ログイン', class: 'btn btn-outline-dark float-right',
                                    data: { 'disable-with': 'ログイン中' } %>
      <% end %>
    </div>
  </div>
</div>